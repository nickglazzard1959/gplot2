LOGIN GUEST GUEST
CHANGE_LINK_ATTRIBUTES USER=GUEST PASSWORD=GUEST
SET_WORKING_CATALOG $USER

"*****************************"
"** BUILD THE UTILS LIBRARY **"
"**  AND ITS TEST PROGRAM   **"
"*****************************"
  
"--- GET THE MODIFY LIBRARY AND CONVERT TO SCU LIBRARY"
GET_FILE FROM=PLUTILS TO=PL_UTILS DATA_CONVERSION=B60
CONVERT_MODIFY_TO_SCU OPL=PL_UTILS RESULT=SCU_UTILS CODE_SET=ASCII64
  
"--- EXTRACT CHARS SOURCE FROM SCU LIBRARY"
CREATE_VARIABLE NAME=PORTF77 KIND=BOOLEAN VALUE=TRUE
SOURCE_CODE_UTILITY 
USE_LIBRARY BASE=SCU_UTILS
EXPAND_DECKS DECK=CHARS COMPILE=FT_CHARS
QUIT
  
"--- COMPILE AND CREATE AN OBJECT LIBRARY"
FORTRAN INPUT=FT_CHARS B=OBJ_CHARS OPT=DEBUG
CREATE_OBJECT_LIBRARY
ADD_MODULES LIBRARY=OBJ_CHARS 
GENERATE_LIBRARY LIBRARY=LIB_UTILS
DISPLAY_OBJECT_LIBRARY LIBRARY=LIB_UTILS
QUIT
  
"--- GET THE TEST PROGRAM FROM SCU LIBRARY"
SOURCE_CODE_UTILITY 
USE_LIBRARY BASE=SCU_UTILS
EXPAND_DECKS DECK=FTUTLT COMPILE=FT_UTLT
QUIT
  
"--- BUILD THE TEST PROGRAM"
FORTRAN INPUT=FT_UTLT B=OBJ_UTLT OPT=DEBUG
  
"--- RUN UTLT MAYBE (THIS WORKS)"
COLLECT_TEXT OUTPUT=TAPE5
FOURTH
NINTH
NOPE
FIRST
1
2
13.7
AB13F
3.14159
DONE
**
EXECUTE_TASK F=OBJ_UTLT L=LIB_UTILS SP=FTUTLT
