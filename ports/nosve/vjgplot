LOGIN GUEST GUEST
CHANGE_LINK_ATTRIBUTES USER=GUEST PASSWORD=GUEST
SET_WORKING_CATALOG $USER

"*****************************"
"** BUILD THE GPLOT PROGRAM **"
"*****************************"

"--- GET THE MODIFY LIBRARY AND CONVERT TO SCU LIBRARY"
GET_FILE FROM=PLGPLOT TO=PL_GPLOT DATA_CONVERSION=B60
CONVERT_MODIFY_TO_SCU OPL=PL_GPLOT RESULT=SCU_GPLOT CODE_SET=ASCII64

"--- EXTRACT GPLOT SOURCE FROM SCU LIBRARY"
CREATE_VARIABLE NAME=PORTF77 KIND=BOOLEAN VALUE=TRUE
CREATE_VARIABLE NAME=NOSVE KIND=BOOLEAN VALUE=TRUE
CREATE_VARIABLE NAME=UNIXNVE KIND=BOOLEAN VALUE=TRUE
SOURCE_CODE_UTILITY 
USE_LIBRARY BASE=SCU_GPLOT
EXPAND_DECKS DECK=FTGPLOT COMPILE=FT_GPLOT
QUIT

"... COMPILE"
FORTRAN INPUT=FT_GPLOT B=OBJ_GPLOT OPT=DEBUG DA=DT

"... LINK - BUT I DO NOT KNOW HOW YET"

"... GET THE FONT DEFINITION FILE"
SOURCE_CODE_UTILITY 
USE_LIBRARY BASE=SCU_GPLOT
EXPAND_DECKS DECK=DADIMFO COMPILE=DADIMFO
QUIT
