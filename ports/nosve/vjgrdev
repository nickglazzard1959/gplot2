LOGIN GUEST GUEST
CHANGE_LINK_ATTRIBUTES USER=GUEST PASSWORD=GUEST
SET_WORKING_CATALOG $USER

"***************************************"
"** BUILD THE GRAPHICS DEVICE LIBRARY **"
"***************************************"

"--- GET THE MODIFY LIBRARY AND CONVERT TO SCU LIBRARY"
GET_FILE FROM=PLGRDEV TO=PL_GRDEV DATA_CONVERSION=B60
CONVERT_MODIFY_TO_SCU OPL=PL_GRDEV RESULT=SCU_GRDEV CODE_SET=ASCII64

"... EXTRACT RELEVANT SOURCE MODULES TO COMPILE"
CREATE_VARIABLE NAME=PORTF77 KIND=BOOLEAN VALUE=TRUE
CREATE_VARIABLE NAME=NOSVE KIND=BOOLEAN VALUE=TRUE
SOURCE_CODE_UTILITY 
USE_LIBRARY BASE=SCU_GRDEV
EXPAND_DECKS DECKS=(EPBLKD,EPSDIM,EPSNAM,EPSRUT,FTSVG, ..
PSBEGN,PSCLR,PSEND,PSMOVE,PSRGBC,PSWID,SVGBLKD, ..
TEKADD,TEKTST),COMPILE=FT_GRDEV
QUIT

"--- COMPILE AND CREATE AN OBJECT LIBRARY"
FORTRAN INPUT=FT_GRDEV B=OBJ_GRDEV OPT=DEBUG
CREATE_OBJECT_LIBRARY
ADD_MODULES LIBRARY=OBJ_GRDEV
GENERATE_LIBRARY LIBRARY=LIB_GRDEV
QUIT
DISPLAY_OBJECT_LIBRARY LIBRARY=LIB_GRDEV
