LOGIN GUEST GUEST
CHANGE_LINK_ATTRIBUTES USER=GUEST PASSWORD=GUEST
SET_WORKING_CATALOG $USER

"*******************************"
"** BUILD THE DIMFILM LIBRARY **"
"*******************************"

"--- GET THE MODIFY LIBRARY AND CONVERT TO SCU LIBRARY"
GET_FILE FROM=PLDIMFM TO=PL_DIMFM DATA_CONVERSION=B60
CONVERT_MODIFY_TO_SCU OPL=PL_DIMFM RESULT=SCU_DIMFM CODE_SET=ASCII64

"--- EXTRACT ALL MODULES FROM SCU LIBRARY"
CREATE_VARIABLE NAME=PORTF77 KIND=BOOLEAN VALUE=TRUE
SOURCE_CODE_UTILITY 
USE_LIBRARY BASE=SCU_DIMFM
EXPAND_DECKS DECKS=ALL COMPILE=FT_DIMFM
QUIT

"--- COMPILE AND CREATE AN OBJECT LIBRARY"
FORTRAN INPUT=FT_DIMFM B=OBJ_DIMFM OPT=DEBUG
CREATE_OBJECT_LIBRARY
ADD_MODULES LIBRARY=OBJ_DIMFM
GENERATE_LIBRARY LIBRARY=LIB_DIMFM
DISPLAY_OBJECT_LIBRARY LIBRARY=LIB_DIMFM
QUIT

