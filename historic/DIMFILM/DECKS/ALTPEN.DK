*DECK ALTPEN F
      SUBROUTINE ALTPEN(I)
*CALL,DFXC00
*CALL,DFXC01
*CALL,DFXC04
*CALL,DFXC05A
*CALL,DFXC14
      ROUTIN = 'ALTPEN'
*CALL,RIN
      IF ((I.LE.0).OR.(I.GT.NRGB-1)) GO TO 1
      IALT = I
   99 CONTINUE
*CALL,ROUT
      RETURN
    1 IF (ICHECK.GT.0) WRITE(ERRREC,10) I,NRGB-1,IALT
   10 FORMAT(1H0,'**DIMFILM WARNING** ALTPEN ATTEMPTED TO SET PEN ',I3,
     1 ', OUTSIDE RANGE 1 TO ',I1,' - CURRENT VALUE ',I1,' UNALTERED')
*CALL,LINOUT0
      GO TO 99
      END
