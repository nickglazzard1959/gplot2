*DECK CVX01X F
      SUBROUTINE DFX01X(DN,BUFF,NW,ERR)
C    EXTENDED WRITE - FOR D48 DRIVERS
C
C    WHEN IN FORTRAN MUST FIRST WRITE RECORD WITH
C    NUMBER OF WORDS WRITTEN, THEN RECORD WITH DATA
      IMPLICIT INTEGER (A-Z)
      INTEGER*4 DN
      INTEGER*2 BUFF(*)
      INTEGER*4 NW
      ERR = 0
      IF (NW.EQ.0) RETURN
      WRITE(DN) NW
      WRITE(DN) (BUFF(I),I=1,NW)
      RETURN
      END
