*DECK CVX01R F
      SUBROUTINE DFX01R(DN,BUFF,NW,ERR)
C    READ - FOR D48 DRIVERS
C
C    WHEN IN FORTRAN MUST FIRST WRITE RECORD WITH
C    NUMBER OF WORDS WRITTEN, THEN RECORD WITH DATA
      IMPLICIT INTEGER (A-Z)
      INTEGER*4 DN
      INTEGER*2 BUFF(*)
      INTEGER*4 NW
      ERR = 0
      NW = 0
      READ (DN,END=1) NW
      READ (DN,END=1) (BUFF(I),I=1,NW)
      RETURN
    1 NW = 0
      RETURN
      END
