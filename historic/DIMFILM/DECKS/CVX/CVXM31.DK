*DECK CVXM31 F
      SUBROUTINE DFXM31(IVAL)
      INTEGER*4 IVAL(2)
*CALL,CVXCVX
C    N.B. REFERENCED WITH REAL - SO IVAL MUST HAVE SAME LENGTH
C         AS REAL (INFO PASSED VIA /DFXCVX/)
C    FOR CONVEX MAP REAL*4 OR *8 TO INTEGER*4 ARRAY
C
C    SETS LOW ORDER BIT
      IVAL(BYTLOW) = IBSET(IVAL(BYTLOW),0)
      RETURN
      ENTRY DFXM32(IVAL)
C    CLEARS LOW ORDER BIT
      IVAL(BYTLOW) = IBCLR(IVAL(BYTLOW),0)
      RETURN
      END
