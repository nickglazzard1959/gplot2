*DECK XUNIT F
      SUBROUTINE XUNIT(X)
*CALL,DFXC00
*CALL,DFXC05A
      ROUTIN = 'XUNIT'
*CALL,RIN
      IF (X.LE.0.0) THEN
                 IF (ICHECK.GT.0) WRITE(ERRREC,3) X
*CALL,LINOUT0
    3 FORMAT(1H0,'**DIMFILM WARNING**  XUNIT CALLED WITH ILLEGAL ARGUMEN
     1T ',1PE14.5,' CALL IGNORED')
      ELSE
                 CALL DFX135(X)
      ENDIF
*CALL,ROUT
      RETURN
      END
