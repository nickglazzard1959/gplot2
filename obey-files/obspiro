C SPIROGRAPH PATTERNS
C
RESET
CANVAS -200 200 -200 200
C
STO 1 100 ; R
STO 2 2  ; LITTLE R, RL
STO 3 80 ; RHO
STO 4 1  ; HOW MANY REVOLUTIONS
MAXPOINTS 3000
C
ERANGE 1 0 6.28 2001
EVAL 0,TWPI,2001,XLIN,X,4,RCL,*,SETX
EVAL 1,RCL,2,RCL,-,5,STO  ; [5] = R - RL
EVAL 5,RCL,2,RCL,/,6,STO  ; [6] = (R - RL)  / RL
PROC 1 X,COS,5,RCL,*,6,RCL,X,*,COS,3,RCL,*,+ ; X
PROC 2 X,SIN,5,RCL,*,6,RCL,X,*,SIN,3,RCL,*,+ ; Y
EVAL @1,@2,PTHO

